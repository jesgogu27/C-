@model CrudNet7MVC.Models.Contacto
@{
    ViewData["Title"] = "Crear Nuevo contacto";
}

<h1 class="text-center"> Contacto con Net 7(.Net Core MVC)</h1>

<div class="row">
    <div class="offset-12"> 
        <div class="card border">

            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Crear Usuario</strong></h3>
            </div>

            <div class="card-body">
                <form asp-action="Crear">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for ="Name" class="form-control" placeholder="Ingrese Nombre" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Cargo" class="control-label"></label>
                        <input asp-for="Cargo" class="form-control" placeholder="Ingrese Cargo"/>
                        <span asp-validation-for="Cargo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Ingrese Número de Contacto"/>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingrese Email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-secondary d-block mx-auto"><i class="bg bi-person-fill"></i>Crear Usuario</button>
                    </div>
                </form>               
               <a asp-controller="Home" asp-action="Index">Volver</a>
            </div>

        </div>

    </div>
</div>