@model CrudNet7MVC.Models.Contacto
@{
    ViewData["Title"] = "Detalle Contacto";
}
<h1 class="text-center">Detalle Contacto</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">

            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Detalle Usuario</strong></h3>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                      <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m=>m.Id)</th>
                                    <th>@Html.DisplayNameFor(m=>m.Name)</th>
                                    <th>@Html.DisplayNameFor(m=>m.Cargo)</th>
                                    <th>@Html.DisplayNameFor(m=>m.Phone)</th>
                                    <th>@Html.DisplayNameFor(m=>m.Email)</th>
                                    <th>@Html.DisplayNameFor(m=>m.FechaCreacion)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Html.DisplayFor(m=>m.Id)</td>
                                    <td>@Html.DisplayFor(m=>m.Name)</td>
                                    <td>@Html.DisplayFor(m=>m.Cargo)</td>
                                    <td>@Html.DisplayFor(m=>m.Phone)</td>
                                    <td>@Html.DisplayFor(m=>m.Email)</td>
                                    <td>@Html.DisplayFor(m=>m.FechaCreacion)</td>
                                </tr>
                            </tbody>
                        </table>
                
                </div>
                <a asp-controller="Home" asp-action="Index">Volver</a>

            </div>
        </div>
    </div>
    
</div>